{% extends 'base.html.twig' %}

{% block title %}Résultat du recherche{% endblock %}

{% block body %}
    <h1 class="text-center text-4xl p-4">Résultat du recherche</h1>

    {% if results.searchCount() > 0 %}

    <section class="flex flex-wrap gap-4 justify-center">
            {% for result in results %}
                    <div class="flex flex-col basis-2/4 h-auto border items-center border-black max-w-52 rounded-md">
            {% if result.image_front_small_url is defined %}
                    <img class="img" src="{{ result.image_front_small_url }}" alt="Product Image">
            {% else %}
                    <img class="img" src="{{ asset('images/indispo.png') }}" alt="Product Image">
            {% endif %}
                    <p>{{result.product_name}}</p>
                    <a class=" border rounded-full bg-red-700 p-1" href="{{ path('product_show', { code: result.code }) }}">Voir le détail</a>
                </div>
            {% endfor %}
    </section>
    {% else %}
        <p>Aucun produit disponible !</p>
    {% endif %}
{% endblock %}
